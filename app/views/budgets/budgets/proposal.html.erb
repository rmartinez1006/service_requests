<h1>Propuesta</h1>

<table class="table1"  width="950">
<tr>
  <td width="80" align=right >
     <b>Folio:</b>
  </td>
  <td align="left">
     <%= link_to @requests_support_request.num_sequence, :controller=>'/budgets/budgets' , :action => "involved_people", :id => @requests_support_request.id  %>
  </td>
  <td> <b> Creado el:</b></td>
  <td align="left"><%=  @requests_support_request.created_at.strftime("%d/%m/%Y") %></td>
  <td> <b> Ultimo cambio:</b></td>
  <td align="left"><%=  @requests_support_request.status_chng_date.strftime("%d/%m/%Y") %></td>
</tr>


<tr>
  <td width="80" align=right >
     <b>ID:</b>
  </td>
  <td align="left">
     <%= @requests_support_request.request_no %>
  </td>
  <td colspan="4"></td>
</tr>

<tr class="table_content_c3">
  <td width="30" align=right >
    <b>Ubicación:</b>
  </td>
  <td align="left">
    <%= @requests_support_request.ubication_name %>
  </td>
  <td width="60" align=right>
    <b>Atiende:</b>
  </td>
  <td align ="left" colspan="3">
    <%= @requests_support_request.helper %>
  </td>
</tr>


<tr class="table_content_c2">
  <td width="30" align=right >
    <b>Nombre:</b>
  </td>
  <td align="left">
    <%= @requests_support_request.name %>
  </td>
  <td width="70" align=right>
    <b>Correo E.:</b>
  </td>
  <td align ="left" colspan="5">
    <%= @requests_support_request.email %>
  </td>
</tr>

<tr class="table_content_c3">
  <td width="80" align=right >
     <b>Tipo de soporte:</b>
  </td>
  <td align="left" colspan="5">
     <%= @requests_support_request.support_type %>
  </td>
</tr>

<tr class="table_content_c2">
  <td width="80" align=right >
     <b>Descripción:</b>
  </td>
  <td align="left" colspan="5">
     <%= raw(@requests_support_request.text_to_html(@requests_support_request.description)) %>
  </td>
</tr>


<tr>
  <td width="80" align=right >
     <b>Descripción Técnica:</b>
  </td>
  <td align="left" colspan="5">
     <%= raw(@requests_support_request.text_to_html(@requests_support_request.tech_description)) %>
  </td>
</tr>
</table>

<br/>
<%= link_to 'Detalle presupuestos', { :controller=>'/budgets/budgets', :action => "index", :request_id => @requests_support_request.id }, :class => 'link-button' %>
<br/>
<hr />

<% if !@budgets_budget.empty? %>
<table class="table1" width="950">
<tr>
    <th>Concepto</th>
    <th>Unidad</th>
    <th>Cantidad</th>
    <th>Proveedor</th>
    <th>Precio Unit.</th>
    <th>SubTotal</th>
    <th>IVA</th>
    <th>Total</th>    
  </tr>
  <tr>
    <td rowspan="4"> <%= @budgets_budget[0].description %> </td>
    <td rowspan="4"> <%= @budgets_budget[0].unit_measure %> </td>
    <td rowspan="4"> <%= @budgets_budget[0].quantity %> </td>
  </tr>
<% @budgets_budget.each do |budget| %>
  <tr>           
    <td><%= budget.trade_name %></td>
    <td align="right"><%= number_to_currency(budget.unit_cost) %></td>
    <td align="right"><%= number_to_currency(budget.total_cost) %></td>
    <td align="right"><%= number_to_currency(budget.iva) %></td>
    <td align="right"><b><%= number_to_currency(budget.total)%><b></td>
  </tr>
<% end %>
 </table>

<%end%>
<hr /> 
<%= link_to 'Regresar', requests_administration_support_requests_path,:class => 'link-button' %>



