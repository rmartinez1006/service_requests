<h1>Solicitud de servicio</h1>


<p id="notice"><%= notice %></p>


<table width="950">
<tr class="table_content_c2">

  <td width="80" align=right >
     <b>Folio:</b>
  </td>
  <td align="left">
     <%= @requests_support_request.num_sequence  %>
  </td>
  <td> <b> Creado el:</b></td>
  <td align="left"><%=  @requests_support_request.created_at.strftime("%d/%m/%Y") %></td>
  <td> <b> Ultimo cambio:</b></td>
  <td align="left"><%=  @requests_support_request.status_chng_date.strftime("%d/%m/%Y") %></td>
</tr>
</table>

<table width="950">
<tr class="table_content_c2">
  <td width="80" align=right >
     <b>ID:</b>
  </td>
  <td align="left">
     <%= @requests_support_request.request_no %>
  </td>
  <td></td>
  <td></td>
</tr>

<tr class="table_content_c3">
  <td width="30" align=right >
    <b>Ubicación:</b>
  </td>
  <td align="left">
    <%= @requests_support_request.ubication.name %>
  </td>
  <td width="60" align=right>
    <b>Atiende:</b>
  </td>
  <td align ="left">
    <%= @requests_support_request.helper %>
  </td>
</tr>


<tr class="table_content_c2">
  <td width="30" align=right >
    <b>Nombre:</b>
  </td>
  <td align="left">
    <%= @requests_support_request.name %>
  </td>
  <td width="70" align=right>
    <b>Correo E.:</b>
  </td>
  <td align ="left">
    <%= @requests_support_request.email %>
  </td>
</tr>
</table>

<table width="950">
<tr class="table_content_c3">
  <td width="80" align=right >
     <b>Tipo de soporte:</b>
  </td>
  <td align="left">
     <%= @requests_support_request.support_type %>
  </td>
</tr>

<tr class="table_content_c2">
  <td width="80" align=right >
     <b>Descripción:</b>
  </td>
  <td align="left">
     <%= @requests_support_request.description %>
  </td>
</tr>


<tr class="table_content_c3">
  <td width="80" align=right >
     <b>Descripción Técnica:</b>
  </td>
  <td align="left">
     <%= @requests_support_request.tech_description %>     
  </td>
</tr>

</table>

<hr/>

<% @requests_request_commentaries.each do |requests_request_commentary| %>
<table width="950">
  <tr class="table_content_c2">
    <td width="80" align=right >
      <b>Fecha:</b>
    </td>
    <td align="left">
      <%= requests_request_commentary.created_at.strftime("%d/%m/%Y %I:%M%p") %>
    </td>
    <td width="80" align=right >
      <b>Usuario:</b>
    </td>
    <td align="left">
      <%= requests_request_commentary.user.name %>
    </td>

  </tr>
</table>

<table width="950">
  <tr class="table_content_c3">
    <td width="80" align=right >
      <b>Comentario:</b>
    </td>
    <td align="left" >
      <%= requests_request_commentary.commentaries.gsub(/\n/,'<br>') %>
    </td>
  </tr>
</table>
<% end %>

<hr/>


<table>
<%= form_for(@requests_support_request) do |f| %>
<tr class="table_content_c2">
  <td width="80" align=right >
     <b>Comentario:</b>
  </td>
  <td align="left">
    <%= f.text_area :commentaries_to_add, :size => '120x5'%>
  </td>
</tr>
</table>

<hr/>

  <div class="actions">
     <td  ><%= f.submit 'Agregar comentario', :name => 'comment' %></td>
  </div>

<% end %>

<%= link_to 'Cambiar', edit_requests_support_request_path(@requests_support_request) %> |
<%= link_to 'Regresar', requests_support_requests_path %>
<%= link_to 'Escalar',
    :controller => "support_requests",
    :action => "scale",
    :id => @requests_support_request.id %>

